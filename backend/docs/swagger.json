{
	"openapi": "3.0.0",
	"info": {
		"title": "Decentralized Identity API",
		"version": "1.0.0"
	},
	"paths": {
		"/api/identities": {
			"post": {
				"summary": "Create an identity",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"identity": {
										"type": "string"
									}
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "Identity created"
					}
				}
			}
		}
	}
}